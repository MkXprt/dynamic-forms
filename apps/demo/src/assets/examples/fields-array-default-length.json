{
  "template": {
    "className": "grid"
  },
  "elements": [
    {
      "key": "users",
      "type": "array",
      "template": {
        "label": "Users"
      },
      "defaultLength": 3,
      "definitionTemplate": {
        "type": "group",
        "template": {
          "className": "row"
        },
        "elements": [
          {
            "key": "name",
            "type": "control",
            "template": {
              "className": "col-6",
              "label": "Name",
              "input": {
                "type": "textbox",
                "placeholder": "Enter name"
              },
              "validation": {
                "required": true
              }
            }
          },
          {
            "key": "email",
            "type": "control",
            "template": {
              "className": "col-6",
              "label": "Email",
              "input": {
                "type": "textbox",
                "placeholder": "Enter email"
              },
              "validation": {
                "required": true,
                "email": true
              }
            }
          }
        ]
      }
    }
  ],
  "actions": [
    {
      "type": "button",
      "template": {
        "type": "submit",
        "label": "Submit"
      },
      "expressions": {
        "disabled": "rootStatus !== 'VALID'"
      }
    },
    {
      "type": "button",
      "template": {
        "type": "button",
        "label": "Validate",
        "action": "validate"
      }
    },
    {
      "type": "button",
      "template": {
        "type": "reset",
        "label": "Reset"
      }
    },
    {
      "type": "button",
      "template": {
        "type": "button",
        "label": "Reset default",
        "action": "resetDefault"
      }
    }
  ]
}