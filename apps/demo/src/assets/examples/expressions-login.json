{
  "elements": [
    {
      "key": "hidden",
      "type": "control",
      "template": {
        "label": "Hidden",
        "input": {
          "type": "checkbox",
          "defaultValue": true
        },
        "validation": {
          "required": false,
          "email": false
        }
      }
    },
    {
      "key": "options",
      "type": "group",
      "template": {
        "label": "Options"
      },
      "expressions": {
        "hidden": "data.rootModel.hidden"
      },
      "elements": [
        {
          "key": "disabled",
          "type": "control",
          "template": {
            "label": "Disabled",
            "input": {
              "type": "checkbox"
            }
          }
        },
        {
          "key": "required",
          "type": "control",
          "template": {
            "label": "Required",
            "input": {
              "type": "checkbox"
            }
          }
        },
        {
          "key": "readonly",
          "type": "control",
          "template": {
            "label": "Readonly",
            "input": {
              "type": "checkbox"
            }
          }
        }
      ]
    },
    {
      "key": "login",
      "type": "group",
      "template": {
        "label": "Login"
      },
      "expressions": {
        "hidden": "data.rootModel.hidden",
        "disabled": "data.rootModel.options.disabled",
        "readonly": "data.rootModel.options.readonly"
      },
      "elements": [
        {
          "key": "email",
          "type": "control",
          "template": {
            "label": "Email",
            "input": {
              "type": "textbox",
              "inputType": "email",
              "placeholder": "Enter your email"
            },
            "validation": {
              "required": true,
              "email": true
            }
          },
          "expressions": {
            "validation.required": "data.rootModel.options.required"
          }
        },
        {
          "key": "password",
          "type": "control",
          "template": {
            "label": "Password",
            "input": {
              "type": "textbox",
              "inputType": "password",
              "placeholder": "Enter your password"
            },
            "validation": {
              "required": true
            }
          },
          "expressions": {
            "validation.required": "data.rootModel.options.required"
          }
        }
      ]
    }
  ],
  "actions": [
    {
      "type": "button",
      "template": {
        "type": "submit",
        "label": "Submit"
      },
      "expressions": {
        "disabled": "rootStatus !== 'VALID'"
      }
    },
    {
      "type": "button",
      "template": {
        "type": "button",
        "label": "Validate",
        "action": "validate"
      }
    },
    {
      "type": "button",
      "template": {
        "type": "reset",
        "label": "Reset"
      }
    }
  ]
}