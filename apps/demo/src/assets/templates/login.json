{
  "fields": [{
    "key": "loginHidden",
    "type": "control",
    "label": "Hidden",
    "input": {
      "type": "checkbox",
      "defaultValue": true
    },
    "validation": {
      "required": false,
      "email": false
    }
  },
  {
    "key": "login",
    "type": "group",
    "label": "Login",
    "expressions": {
      "hidden": "rootModel.loginHidden"
    },
    "fields": [{
      "key": "disabled",
      "type": "control",
      "label": "Disabled",
      "input": {
        "type": "checkbox"
      }
    }, {
      "key": "required",
      "type": "control",
      "label": "Required",
      "input": {
        "type": "checkbox"
      }
    }, {
      "key": "readonly",
      "type": "control",
      "label": "Readonly",
      "input": {
        "type": "checkbox"
      }
    }, {
      "key": "email",
      "type": "control",
      "label": "Email",
      "input": {
        "type": "textbox",
        "inputType": "email",
        "placeholder": "Enter your email"
      },
      "validation": {
        "required": true,
        "email": true
      },
      "expressions": {
        "disabled": "parentModel.disabled",
        "readonly": "parentModel.readonly",
        "validation.required": "parentModel.required"
      }
    }, {
      "key": "password",
      "type": "control",
      "label": "Password",
      "input": {
        "type": "textbox",
        "inputType": "password",
        "placeholder": "Enter your password"
      },
      "validation": {
        "required": true
      },
      "expressions": {
        "disabled": "parentModel.disabled",
        "readonly": "parentModel.readonly",
        "validation.required": "parentModel.required"
      }
    }]
  }]
}