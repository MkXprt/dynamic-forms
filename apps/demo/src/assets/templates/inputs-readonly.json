{
  "fields": [
    {
      "key": "readonly",
      "type": "group",
      "readonly": true,
      "fields": [
        {
          "key": "checkbox",
          "type": "control",
          "label": "Checkbox",
          "input": {
            "type": "checkbox",
            "defaultValue": true
          }
        },
        {
          "key": "datepicker",
          "type": "control",
          "label": "Datepicker",
          "input": {
            "type": "datepicker",
            "defaultValue": "2019-01-01",
            "placeholder": "Enter a date"
          }
        },
        {
          "key": "dropdown",
          "type": "control",
          "label": "Dropdown",
          "input": {
            "type": "dropdown",
            "defaultValue": 1,
            "placeholder": "Select an option",
            "options": [
              { "value": 1, "label": "Option 1" },
              { "value": 2, "label": "Option 2" }
            ]
          }
        },
        {
          "key": "numberbox",
          "type": "control",
          "label": "Numberbox",
          "input": {
            "type": "numberbox",
            "defaultValue": 0.01,
            "placeholder": "Enter a number"
          }
        },
        {
          "key": "radio",
          "type": "control",
          "label": "Radio",
          "input": {
            "type": "radio",
            "defaultValue": 2,
            "options": [
              { "value": 1, "label": "Option 1" },
              { "value": 2, "label": "Option 2" }
            ]
          }
        },
        {
          "key": "textarea",
          "type": "control",
          "label": "Textarea",
          "input": {
            "type": "textarea",
            "defaultValue": "Text line 1\nText line 2",
            "placeholder": "Enter a text"
          }
        },
        {
          "key": "textbox",
          "type": "control",
          "label": "Textbox",
          "input": {
            "type": "textbox",
            "defaultValue": "Text 1, Text 2",
            "placeholder": "Enter a text"
          }
        },
        {
          "key": "email",
          "type": "control",
          "label": "Email",
          "input": {
            "type": "textbox",
            "defaultValue": "user@mail.com",
            "inputType": "email",
            "placeholder": "Enter an email"
          }
        },
        {
          "key": "password",
          "type": "control",
          "label": "Password",
          "input": {
            "type": "textbox",
            "defaultValue": "Test1234!",
            "inputType": "password",
            "placeholder": "Enter a password"
          }
        },
        {
          "key": "search",
          "type": "control",
          "label": "Search",
          "input": {
            "type": "textbox",
            "defaultValue": "angular forms JSON",
            "inputType": "search",
            "placeholder": "Enter a search text"
          }
        }
      ]
    },
    {
      "key": "notReadonly",
      "type": "group",
      "fields": [
        {
          "key": "textbox",
          "type": "control",
          "label": "Textbox (not readonly)",
          "input": {
            "type": "textbox",
            "placeholder": "Enter a text"
          }
        }
      ]
    }
  ]
}
