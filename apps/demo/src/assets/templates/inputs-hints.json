{
  "fields": [
    {
      "key": "checkbox",
      "type": "control",
      "label": "Checkbox",
      "input": {
        "type": "checkbox"
      },
      "validation": {
        "required": true
      }
    },
    {
      "key": "combobox",
      "type": "control",
      "label": "Combobox",
      "input": {
        "type": "combobox",
        "options": [
          "Value1",
          "Value2",
          "Value3"
        ],
        "minLength": 5,
        "maxLength": 6,
        "pattern": "^Value[0-9]$"
      },
      "hints": {
        "messageLeft": "5-6 characters"
      },
      "validation": {
        "required": true,
        "minLength": true,
        "maxLength": true,
        "pattern": true
      }
    },
    {
      "key": "datepicker",
      "type": "control",
      "label": "Datepicker",
      "input": {
        "type": "datepicker"
      },
      "validation": {
        "required": true
      }
    },
    {
      "key": "dropdown",
      "type": "control",
      "label": "Dropdown",
      "input": {
        "type": "dropdown",
        "options": [
          { "value": 1, "label": "Option 1" },
          { "value": 2, "label": "Option 2" }
        ]
      },
      "validation": {
        "required": true
      }
    },
    {
      "key": "numberbox",
      "type": "control",
      "label": "Numberbox",
      "input": {
        "type": "numberbox",
        "min": -5,
        "max": 5
      },
      "validation": {
        "required": true,
        "min": true,
        "max": true
      }
    },
    {
      "key": "radio",
      "type": "control",
      "label": "Radio",
      "input": {
        "type": "radio",
        "options": [
          { "value": 1, "label": "Option 1" },
          { "value": 2, "label": "Option 2" }
        ]
      },
      "validation": {
        "required": true
      }
    },
    {
      "key": "textarea",
      "type": "control",
      "label": "Textarea",
      "input": {
        "type": "textarea"
      },
      "validation": {
        "required": true
      }
    },
    {
      "key": "textbox",
      "type": "control",
      "label": "Textbox",
      "input": {
        "type": "textbox",
        "minLength": 5,
        "maxLength": 10
      },
      "hints": {
        "messageLeft": "5-10 characters"
      },
      "validation": {
        "required": true,
        "minLength": true,
        "maxLength": true
      },
      "expressions": {
        "hints.messageRight": "(model || \"\").length + \"\/10\""
      }
    },
    {
      "key": "email",
      "type": "control",
      "label": "Email",
      "input": {
        "type": "textbox",
        "inputType": "email"
      },
      "validation": {
        "required": true,
        "email": true
      }
    },
    {
      "key": "password",
      "type": "control",
      "label": "Password",
      "input": {
        "type": "textbox",
        "inputType": "password",
        "pattern": "^(?=.*\\d)(?=.*[a-zA-Z]).{6,20}$"
      },
      "validation": {
        "required": true,
        "pattern": true
      }
    },
    {
      "key": "search",
      "type": "control",
      "label": "Search",
      "input": {
        "type": "textbox",
        "inputType": "search"
      },
      "validation": {
        "required": true
      }
    }
  ]
}
